<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3"
    >

    <LinearLayout android:id="@+id/full_volume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="2"
        android:layout_column="0"
        android:weightSum="2" >
        <!--<include layout="@layout/centered_text_view" android:id="+id/full_volume_textview" />-->
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/full_volume" >
        </TextView>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/full_volume_percent_seekbar" />
    </LinearLayout>

    <LinearLayout android:id="@+id/low_volume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="1"
        android:layout_column="0" >
        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="@string/low_volume" >
        </TextView>
        <SeekBar
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/low_volume_percent_seekbar" />
    </LinearLayout>
</GridLayout>